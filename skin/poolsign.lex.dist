<h1>{{ title }}</h1>
<p>Check the mining work of any SHA256 bitcoin pool:</p>
<div style="text-align:center;padding:10px 0px" class="form-list">
  <label for="poolsign-host">Stratum hostname or IP:</label>
  <br />
  <input name="poolsign-host" id="poolsign-host" type="text" style="text-align:center;" size="32" placeholder="stratum.mining-pool.io" />
  <br />
  <br />
  <label for="poolsign-port">Port number:</label>
  <br />
  <input id="poolsign-port" type="text" style="text-align:center;"  placeholder="3333" />
  <br />
  <br />
  <label for="poolsign-username">Worker username:</label>
  <br />
  <input id="poolsign-username" type="text" style="text-align:center;"  placeholder="workername.0" />
  <br />
  <br />
  <label for="poolsign-password">Worker Password:</label>
  <br />
  <input id="poolsign-password" type="text" style="text-align:center;"  placeholder="x" />
  <br />
  <br />
  <button type="button" title="Verify" class="button" id="poolsign-button"><span><span>&dArr; Verify &dArr;</span></span></button>
  <br />
  <br />
  <div id="poolsign-results"></div>
  <div id="poolsign-waitforit" class="waitforit" style="background:url(data:image/gif;base64,) 50% 50% no-repeat;height:32px;display:none;"></div>
</div>
<script type="text/javascript">
jQuery('button#poolsign-button').click(function(){
  jQuery('div#poolsign-results').html('');
  var p = jQuery('input#poolsign-port').val();
  var h = jQuery('input#poolsign-host').val();
  var u = jQuery('input#poolsign-username').val();
  var x = jQuery('input#poolsign-password').val();
  if (!p||!h||!u||!x||!(new RegExp(/\./).test(h))) return jQuery('div#poolsign-results').hide().html('very funny.').fadeIn();
  if (!new RegExp(/^\d+$/).test(p)) return jQuery('div#poolsign-results').hide().html('very funny.<br /><br />If that was not a joke,<br />please insert a valid port (/^[\\d,]+$/).').fadeIn();
  var verifyPool = function(h,u,x,p) {
    jQuery.ajax({
      url: location.pathname+"?host="+h+"&port="+p+"&user="+u+"&pass="+x,
      context: jQuery('div#poolsign-results')
    }).done(function(data) {
      jQuery(this).append(data).find('h3').fadeIn();
      jQuery('div#poolsign-waitforit').hide();
    });
  };
  jQuery('div#poolsign-waitforit').fadeIn();
  verifyPool(h,u,x,p);
});
</script>